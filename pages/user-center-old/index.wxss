.page_container {
  background-color: #fff;
  font-family: PingFang SC;
  height: 100vh;
}
.top_bg {
  height: 70rpx;
}
.main_content {
  background-color: #fff;
  border-top-left-radius: 30rpx;
  border-top-right-radius: 30rpx;
  height: calc(100vh - 120rpx);
  position: relative;
}
.userinfo_container {
  align-items: center;
  display: -webkit-flex;
  display: flex;
  gap: 80rpx;
  gap: 20rpx;
  padding: 0rpx 60rpx;
  position: absolute;
  top: -30rpx;
}
.avatar {
  border-radius: 50%;
  height: 128rpx;
  width: 128rpx;
}
.username {
  color: #333;
  color: rgba(0, 0, 0, 0.9);
  font-size: 32rpx;
  margin-left: 40rpx;
  margin-top: 20rpx;
  max-width: 250rpx;
}
.settings_container {
  display: -webkit-flex;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
  padding: 0 40rpx;
  position: relative;
  top: 150rpx;
}
.setting_item {
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.08);
  font-size: 28rpx;
  justify-content: space-between;
  padding: 30rpx 0rpx;
}
.left,
.setting_item {
  align-items: center;
  display: -webkit-flex;
  display: flex;
}
.left {
  gap: 20rpx;
}
.contact-button {
  box-sizing: border-box;
  color: rgba(0, 0, 0, 0.9);
  font-size: 28rpx;
  font-weight: 400;
  line-height: 56rpx;
  margin: 0;
  padding-bottom: 10rpx;
  padding-left: 0rpx;
  padding-top: 10rpx;
  text-align: left;
  width: 400rpx;
}
.button-hover {
  background-color: #fff;
}
.setting_icon {
  height: 40rpx;
  width: 40rpx;
}
.setting_text {
  color: rgba(0, 0, 0, 0.9);
}
.arrow_icon {
  height: 30rpx;
  width: 30rpx;
}
