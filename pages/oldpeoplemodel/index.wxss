.container {
  align-items: center;
  display: -webkit-flex;
  display: flex;
  flex-direction: column;
  height: 100vh;
  justify-content: center;
}
.icon-container {
  margin-bottom: 150px;
}
.icon {
  height: 100px;
  width: 100px;
}
.text-container {
  margin-bottom: 20px;
  text-align: center;
}
.title {
  font-size: 18px;
  font-weight: 700;
}
.description {
  color: #666;
  font-size: 14px;
  margin-top: 5px;
}
.btn {
  background-color: #007bff;
  border: none;
  border-radius: 20px;
  color: #fff;
  cursor: pointer;
  font-size: 16px;
  height: 40px;
  outline: none;
  width: 200px;
}
