.modal_container {
  background-color: rgba(0, 0, 0, 0.4);
  bottom: 0;
  height: 100%;
  left: 0;
  position: fixed;
  right: 0;
  top: 0;
  width: 100%;
  z-index: 1;
}
.icon_close {
  align-items: center;
  background-color: rgba(0, 0, 0, 0.7);
  border-radius: 50%;
  color: #fff;
  display: -webkit-flex;
  display: flex;
  font-size: 32rpx;
  font-weight: 700;
  height: 70rpx;
  justify-content: center;
  position: fixed;
  right: 40rpx;
  top: 40rpx;
  width: 70rpx;
}
.code_img {
  border-radius: 30rpx;
  height: 400rpx;
  margin-left: 50%;
  margin-top: 50%;
  transform: translateX(-50%);
  width: 400rpx;
}
.install_tip_back {
  background-color: rgba(0, 0, 0, 0.4);
  top: 0;
  z-index: 1;
}
.install_tip_back,
.install_tip_detail {
  bottom: 0;
  left: 0;
  position: fixed;
  right: 0;
}
.install_tip_detail {
  background-color: #fff;
  border-radius: 40rpx 40rpx 0 0;
  padding: 50rpx;
  top: 60%;
  z-index: 9;
}
.install_tip_detail_title {
  font-size: 40rpx;
  font-weight: 400;
  text-align: center;
}
.install_tip_detail_tip {
  color: rgba(0, 0, 0, 0.4);
  font-size: 25rpx;
  margin-top: 20rpx;
  text-align: center;
}
.install_tip_detail_shell {
  display: -webkit-flex;
  display: flex;
  justify-content: center;
  margin: 70rpx 0;
}
.install_tip_detail_copy {
  color: #546488;
  margin-left: 10rpx;
}
.install_tip_detail_button {
  background-color: rgba(0, 0, 0, 0.1);
  border-radius: 10rpx;
  color: #07c160;
  font-weight: 500;
  height: 90rpx;
  line-height: 90rpx;
  margin: 0 auto;
  text-align: center;
  width: 60%;
}
